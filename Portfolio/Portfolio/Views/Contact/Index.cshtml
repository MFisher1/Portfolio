@{
    ViewBag.Title = "Contact";
}

<div class="container">
@model Portfolio.Models.PortfolioContact
@{
    ViewBag.Title = "Contact Form";
}

<div class="contactform">
    <h2>Contact Form</h2>
    <form action="@Url.Action("Index","Contact")" method="post">
        <div>
            <!--create label, then text box, then validation for each property you want to display-->
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName)
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
        <div>
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName)
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
        <div>
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div>
            @Html.LabelFor(x => x.PhoneNumber)
            @Html.TextBoxFor(x => x.PhoneNumber)
            @Html.ValidationMessageFor(x => x.PhoneNumber)
        </div>
        <div>
            @Html.LabelFor(x => x.Comment)
            @Html.TextAreaFor(x => x.Comment)
            @Html.ValidationMessageFor(x => x.Comment)
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>
    </div>
<!--Add a reference to jQuery validation. This is the javascript that actually performs our validation using jQuery-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}